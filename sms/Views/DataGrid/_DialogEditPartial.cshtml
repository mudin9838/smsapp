@model sms.Models.StockItem

@using Syncfusion.EJ2

<div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="StockId" value=@Model.StockId.ToString() disabled type='text' />
                <span class="e-float-line"></span>
                <label asp-for="StockId" class="e-float-text e-label-top">StockId</label>
            </div>
        </div>
        <div class="form-group col-md-3">
            <ejs-dropdownlist id="ParentId" value=@Model.ParentId dataSource="@ViewBag.ParentId" placeholder=" እናት መ/ቤት" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="ParentName" value="ParentId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>

        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Serie" type='text' value=@Model.Serie />
                <span class="e-float-line"></span>
                <label asp-for="Serie" class="e-float-text e-label-top">ሴሪ</label>
            </div>
        </div>
        <div class="form-group col-md-3">
            <ejs-dropdownlist id="CategoryId" value=@Model.CategoryId dataSource="@ViewBag.CategoryId" placeholder="የአቃው መደብ" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="CategoryName" value="CategoryId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>

    </div>


    <div class="form-row">
        <div class="form-group col-md-4">
            <ejs-dropdownlist id="SubCategoryId" value=@Model.SubCategoryId dataSource="@ViewBag.SubCategoryId" placeholder="የአቃው አይነት" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="SubCategoryName" value="SubCategoryId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>

        <div class="form-group col-md-4">
            <ejs-dropdownlist id="MeasurementUnitId" value=@Model.MeasurementUnitId dataSource="@ViewBag.MeasurementUnitId" placeholder="መለኪያ" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="MeasurementUnitName" value="MeasurementUnitId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>
      @*  <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Model" id="Model" type='text' value=@Model.Model />
                <span class="e-float-line"></span>
                <label asp-for="Model" class="e-float-text e-label-top">ሞዴል</label>
            </div>
        </div>*@
    </div>


    <div class="form-row">
        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Quantity" id="Quantity" type='text' value=@Model.Quantity />
                <span class="e-float-line"></span>
                <label asp-for="Quantity" class="e-float-text e-label-top">ብዛት</label>
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="EachPrice" id="EachPrice" type='text' value=@Model.EachPrice onkeyup="changeValues()"/>
                <span class="e-float-line"></span>
                <label asp-for="EachPrice" class="e-float-text e-label-top">ያንዱ ዋጋ</label>
            </div>
        </div>

        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Vat" id="Vat" type='text' value=@Model.Vat />
                <span class="e-float-line"></span>
                <label asp-for="Vat" class="e-float-text e-label-top">ቫት(Vat)</label>
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="TotalPrice" id="TotalPrice" type='text' value=@Model.TotalPrice />
                <span class="e-float-line"></span>
                <label asp-for="TotalPrice" class="e-float-text e-label-top">የዋጋው ድምር(ቫትን ጨምሮ)</label>
            </div>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <ejs-datetimepicker id="RegisteredDate" serverTimezoneOffset="7.0" value=@Model.RegisteredDate placeholder="የተመዘገበበት ቀን" floatLabelType="Always" format="yyyy-MM-dd hh:mm"></ejs-datetimepicker>

        </div>

    </div>
</div>


<ejs-scripts></ejs-scripts>
