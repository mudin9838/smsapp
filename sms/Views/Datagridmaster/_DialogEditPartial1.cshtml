@model sms.Models.Out

@using Syncfusion.EJ2

<div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="OutId" value=@Model.OutId.ToString() disabled type='text' />
                <span class="e-float-line"></span>
                <label asp-for="OutId" class="e-float-text e-label-top">OutId</label>
            </div>
        </div>
        <div class="form-group col-md-4">
            <ejs-dropdownlist id="ParentId" value=@Model.ParentId dataSource="@ViewBag.ParentId" placeholder=" እናት መ/ቤት" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="ParentName" value="ParentId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>

        <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Serie" type='text' value=@Model.Serie />
                <span class="e-float-line"></span>
                <label asp-for="Serie" class="e-float-text e-label-top">ሴሪ</label>
            </div>
        </div>
    
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="RecieptNo" value=@Model.RecieptNo type='text' />
                <span class="e-float-line"></span>
                <label asp-for="RecieptNo" class="e-float-text e-label-top">የደረሰኝ ቁጥር</label>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="From" value=@Model.From type='text' />
                <span class="e-float-line"></span>
                <label asp-for="From" class="e-float-text e-label-top">ከ</label>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="To" value=@Model.To type='text' />
                <span class="e-float-line"></span>
                <label asp-for="To" class="e-float-text e-label-top">እስከ</label>
            </div>
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-4">
            <ejs-dropdownlist id="DepartmentId" value=@Model.DepartmentId dataSource="@ViewBag.DepartmentId" placeholder="የስራ ክፍል" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="DepartmentName" value="DepartmentId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>
        <div class="form-group col-md-4">
            <ejs-dropdownlist id="EmployeeId" value=@Model.EmployeeId dataSource="@ViewBag.EmployeeId" placeholder="የሰራተኛው ስም" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="EmployeeName" value="EmployeeId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>
        <div class="form-group col-md-4">
            <ejs-dropdownlist id="StockId" value=@Model.StockId dataSource="@ViewBag.StockId" placeholder="የስቶክ ኮድ" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="StockId" foreignKeyValue="Model" value="StockId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>

    </div>


    <div class="form-row">

        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Quantity" id="Quantity" type='text' value=@Model.Quantity />
                <span class="e-float-line"></span>
                <label asp-for="Quantity" class="e-float-text e-label-top">ብዛት</label>
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="EachPrice" id="EachPrice" type='text' value=@Model.EachPrice onkeyup="changeValues()"/>
                <span class="e-float-line"></span>
                <label asp-for="EachPrice" class="e-float-text e-label-top">ያንዱ ዋጋ</label>
            </div>
        </div>

        <div class="form-group col-md-">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Vat" id="Vat" type='text' value=@Model.Vat />
                <span class="e-float-line"></span>
                <label asp-for="Vat" class="e-float-text e-label-top">ቫት(Vat)</label>
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="TotalPrice" id="TotalPrice" type='text' value=@Model.TotalPrice />
                <span class="e-float-line"></span>
                <label asp-for="TotalPrice" class="e-float-text e-label-top">የዋጋው ድምር(ቫትን ጨምሮ)</label>
            </div>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <ejs-datetimepicker id="OutDate" serverTimezoneOffset="7.0" value=@Model.OutDate placeholder="ወጪ የተደረገበት ቀን" floatLabelType="Always"></ejs-datetimepicker>

        </div>
        @if (User.IsInRole("SuperAdmin"))
        {
                <div class="form-group col-md-4">
                <ejs-dropdownlist id="StatusId" value=@Model.StatusId dataSource="@ViewBag.StatusId" placeholder="Status" floatLabelType="Always" popupHeight="300px">
                        <e-dropdownlist-fields text="StatusName" foreignKeyValue="StatusName" value="StatusId"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                </div>
        }
    </div>
</div>


<ejs-scripts></ejs-scripts>
