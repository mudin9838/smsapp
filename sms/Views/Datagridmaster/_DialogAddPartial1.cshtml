@model sms.Models.Out

@using Syncfusion.EJ2


<div>
    <form asp-action="Create" asp-controller="Out" style="
    width: 80%;
    margin: auto;
    margin-top: 5%;
    /* display: flex; */
">
        <div class="form-row">
            <div class="form-group col-md-4">
                <ejs-dropdownlist id="ParentId" dataSource="@ViewBag.ParentId" placeholder="እናት መ/ቤት" floatLabelType="Always" popupHeight="300px">
                    <e-dropdownlist-fields text="ParentName" foreignKeyValue="ParentName" value="ParentId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
            <div class="form-group col-md-2">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="Serie" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="Serie" class="e-float-text e-label-top">ሴሪ</label>
                </div>
            </div>
            <div class="form-group col-md-2">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="RecieptNo" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="RecieptNo" class="e-float-text e-label-top">የደረሰኝ ቁጥር</label>
                </div>
            </div>

            <div class="form-group col-md-2">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="From" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="From" class="e-float-text e-label-top">ከ</label>
                </div>
            </div>
            <div class="form-group col-md-2">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="To" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="To" class="e-float-text e-label-top">እስከ</label>
                </div>
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-4">
                <ejs-dropdownlist id="DepartmentId" dataSource="@ViewBag.DepartmentId" placeholder="የስራ ክፍል" floatLabelType="Always" popupHeight="300px" filterBarPlaceholder="e.g: መረጃ ቴክኖሎጂ" allowFiltering="true" ignoreAccent="true" change="countrychange">
                    <e-dropdownlist-fields text="DepartmentName" foreignKeyValue="DepartmentName" value="DepartmentId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
            <div class="form-group col-md-4">
                <ejs-dropdownlist id="EmployeeId" enabled="false" dataSource="@ViewBag.EmployeeId" placeholder="የሰራተኛው ስም" floatLabelType="Always" filterBarPlaceholder="e.g: አበበ" popupHeight="300px">
                    <e-dropdownlist-fields text="EmployeeName" foreignKeyValue="EmployeeName" value="EmployeeId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
          @*  <div class="form-group col-md-4">
                <ejs-dropdownlist id="StockId" dataSource="@ViewBag.StockId" placeholder="የስቶክ ኮድ" floatLabelType="Always" popupHeight="300px">
                    <e-dropdownlist-fields text="StockId" foreignKeyValue="StockId" value="StockId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>*@
@*            <div class="form-group col-md-4">

                <div class="e-float-input e-control-wrapper">
                    <label asp-for="StockId" class="e-float-text e-label-top" style="margin-top: -7%;">ሞዴል</label>
                    <span class="e-float-line"></span>
                    <select asp-for="StockId" id="StockId" class="form-control" asp-items="ViewBag.StockId">
                        <option selected disabled>--ይምረጡ--</option>
                    </select>


                </div>
            </div>*@

        </div>


        <div class="form-row">
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="Quantity" asp-for="Quantity" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="Quantity" class="e-float-text e-label-top">ብዛት</label>
                </div>
            </div>
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="EachPrice" asp-for="EachPrice" type='text' onkeyup="changeValues()" />
                    <span class="e-float-line"></span>
                    <label asp-for="EachPrice" class="e-float-text e-label-top">ያንዱ ዋጋ</label>
                </div>
            </div>

            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="Vat" asp-for="Vat" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="Vat" class="e-float-text e-label-top">ቫት(Vat)</label>
                </div>
            </div>
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="TotalPrice" asp-for="TotalPrice" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="TotalPrice" class="e-float-text e-label-top">የዋጋው ድምር(ቫትን ጨምሮ)</label>
                </div>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <ejs-datetimepicker id="OutDate" serverTimezoneOffset="7.0" placeholder="ወጪ የተደረገበት ቀን" floatLabelType="Always"></ejs-datetimepicker>

            </div>

        </div>
        

           

        



  </form>
</div>

<ejs-scripts></ejs-scripts>
