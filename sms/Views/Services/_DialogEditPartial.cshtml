@model sms.Models.Service

@using Syncfusion.EJ2

<div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="ServiceId" value=@Model.ServiceId.ToString() disabled type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="ServiceId" class="e-float-text e-label-top">ServiceId</label>
                </div>
            </div>
            <div class="form-group col-md-3">
                <ejs-dropdownlist id="ParentId" value=@Model.ParentId dataSource="@ViewBag.ParentId" placeholder=" እናት መ/ቤት" floatLabelType="Always" popupHeight="300px">
                    <e-dropdownlist-fields text="ParentName" value="ParentId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
                  <div class="form-group col-md-3">
            <ejs-dropdownlist id="GeneralId" dataSource="@ViewBag.GeneralId" value=@Model.GeneralId placeholder="የሰሌዳ ኮድ" floatLabelType="Always" popupHeight="300px">
                <e-dropdownlist-fields text="GeneralId" value="GeneralId"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>

            <div class="form-group col-md-2">
            <ejs-dropdownlist id="GarageId" value=@Model.GarageId change="countrychange" dataSource="@ViewBag.GarageId" placeholder="ጋራዥ" floatLabelType="Always" popupHeight="300px" allowFiltering="true">
                    <e-dropdownlist-fields text="GarageName" value="GarageId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
            <div class="form-group col-md-2">
            <ejs-dropdownlist id="ReplacementId" dataSource="@ViewBag.ReplacementId" value=@Model.ReplacementId placeholder="የተቀየሩ ዓይነቶች" allowFiltering="true" ignoreAccent="true" floatLabelType="Always" popupHeight="300px">
                    <e-dropdownlist-fields text="ReplacementName" value="ReplacementId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
  
        </div>


        <div class="form-row">
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                <input id="Measurement" asp-for="Measurement" type='text' value=@Model.Measurement />
                    <span class="e-float-line"></span>
                    <label asp-for="Measurement" class="e-float-text e-label-top">መለኪያ</label>
                </div>
            </div>

            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                <input id="EachPrice" asp-for="EachPrice" type='text' value=@Model.EachPrice />
                    <span class="e-float-line"></span>
                <label asp-for="EachPrice" class="e-float-text e-label-top">ዋጋ</label>
                </div>
            </div>

            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                <input id="TotalPrice" asp-for="TotalPrice" type='text' value=@Model.TotalPrice />
                    <span class="e-float-line"></span>
                <label asp-for="TotalPrice" class="e-float-text e-label-top">ጠቅላላ  ዋጋ</label>
                </div>
            </div>

        </div>


        <div class="form-row">
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="km" type='text' value=@Model.km />
                    <span class="e-float-line"></span>
                    <label asp-for="km" class="e-float-text e-label-top">ኪ/ሜትር</label>
                </div>
            </div>
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                <input asp-for="Kmnext" type='text' value=@Model.Kmnext />
                    <span class="e-float-line"></span>
                <label asp-for="Kmnext" class="e-float-text e-label-top">ቀጣይ  ኪ.ሜ</label>
                </div>
            </div>


        </div>
        <div class="form-row">

            <div class="form-group col-md-6">
                <ejs-datetimepicker serverTimezoneOffset="7.0" id="RegisteredDate" placeholder="የተመዘገበበት ቀን" floatLabelType="Always" value=@Model.RegisteredDate></ejs-datetimepicker>

            </div>

        </div>




</div>

<ejs-scripts></ejs-scripts>
