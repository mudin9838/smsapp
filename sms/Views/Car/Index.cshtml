        <e-grid-column type="checkbox" width="50"></e-grid-column>
        <e-grid-column field="CarId"  headerText="CarId" isPrimaryKey="true" isIdentity="true" visible="false"></e-grid-column>
       <e-grid-column field="CarName"  headerText="CarName"></e-grid-column>
