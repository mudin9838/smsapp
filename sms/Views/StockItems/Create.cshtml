@model sms.Models.StockItem

@{
    ViewData["Title"] = "Create";
}

<div>
    <form asp-action="Create" style="
    width: 80%;
    margin: auto;
    margin-top: 5%;
    /* display: flex; */
">
        <div class="form-row">

            <div class="form-group col-md-4">
                <ejs-dropdownlist id="ParentId" dataSource="@ViewBag.ParentId" placeholder=" እናት መ/ቤት" floatLabelType="Always" popupHeight="300px">
                    <e-dropdownlist-fields text="ParentName" foreignKeyValue="ParentName" value="ParentId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>

            <div class="form-group col-md-4">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="Serie" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="Serie" class="e-float-text e-label-top">ሴሪ</label>
                </div>
            </div>
            <div class="form-group col-md-4">
                <ejs-dropdownlist id="CategoryId" change="countrychange" dataSource="@ViewBag.CategoryId" placeholder="የአቃው መደብ" floatLabelType="Always" popupHeight="300px" filterBarPlaceholder="e.g: ፅዳት" allowFiltering="true" ignoreAccent="true">
                    <e-dropdownlist-fields text="CategoryName" value="CategoryId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>

        </div>


        <div class="form-row">
            <div class="form-group col-md-4">
                <ejs-dropdownlist enabled="false" id="SubCategoryId" change="statechange" dataSource="@ViewBag.SubCategoryId" placeholder="የአቃው አይነት" filterBarPlaceholder="e.g: ጀሪካን 20 ሊ" allowFiltering="true" ignoreAccent="true" floatLabelType="Always" popupHeight="300px">
                    <e-dropdownlist-fields text="SubCategoryName" value="SubCategoryId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>

            <div class="form-group col-md-4">
                <ejs-dropdownlist enabled="false" id="MeasurementUnitId" dataSource="@ViewBag.MeasurementUnitId" placeholder="መለኪያ" floatLabelType="Always" popupHeight="300px">
                    <e-dropdownlist-fields text="MeasurementUnitName" value="MeasurementUnitId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
            <div class="form-group col-md-4">
                <div class="e-float-input e-control-wrapper">
                    <input id="Model" asp-for="Model" type='text'/>
                    <span class="e-float-line"></span>
                    <label asp-for="Model" class="e-float-text e-label-top">ሞዴል</label>
                </div>
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="Quantity" asp-for="Quantity" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="Quantity" class="e-float-text e-label-top">ብዛት</label>
                </div>
            </div>
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="EachPrice" asp-for="EachPrice" type='text' onkeyup="changeValues()" />
                    <span class="e-float-line"></span>
                    <label asp-for="EachPrice" class="e-float-text e-label-top">ያንዱ ዋጋ</label>
                </div>
            </div>

            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="Vat" asp-for="Vat" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="Vat" class="e-float-text e-label-top">ቫት(Vat)</label>
                </div>
            </div>
            <div class="form-group col-md-3">
                <div class="e-float-input e-control-wrapper">
                    <input id="TotalPrice" asp-for="TotalPrice" type='text' />
                    <span class="e-float-line"></span>
                    <label asp-for="TotalPrice" class="e-float-text e-label-top">የዋጋው ድምር(ቫትን ጨምሮ)</label>
                </div>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <ejs-datepicker id="RegisteredDate" placeholder="የተመዘገበበት ቀን" floatLabelType="Always"></ejs-datepicker>

            </div>

        </div>
        @{
            IDictionary<string, object> submit = new Dictionary<string, object>();
            submit.Add("type", "submit");
        }
        <div class="form-row" id="foot" style="margin-left:50%;">
            <div class="form-group col-md-2">
                <ejs-button id="submit" content="Save" htmlAttributes="submit" cssClass="e-primary"></ejs-button>

            </div>
            <div class="form-group col-md-2">
                <a href="https://localhost:5001/DataGrid/dialogtemplate" class="e-control e-btn e-lib e-primary">Cancel</a>
            </div>
        </div>



    </form>
</div>
